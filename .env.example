# Database (Neon)
# Get these from: https://console.neon.tech/
# Use the pooled connection string for POSTGRES_URL
# Use the non-pooled connection string for POSTGRES_URL_NON_POOLING
POSTGRES_URL="postgresql://user:password@host-pooler.region.aws.neon.tech/database?sslmode=require"
POSTGRES_URL_NON_POOLING="postgresql://user:password@host.region.aws.neon.tech/database?sslmode=require"

# Redis Cache (Upstash)
UPSTASH_REDIS_URL="https://your-redis-instance.upstash.io"
UPSTASH_REDIS_TOKEN="your-upstash-token"

# Vercel Blob Storage
BLOB_READ_WRITE_TOKEN="your-vercel-blob-token"

# External Content APIs
YOUTUBE_API_KEY="your-youtube-api-key"
TWITCH_CLIENT_ID="your-twitch-client-id"
TWITCH_CLIENT_SECRET="your-twitch-client-secret"

# Authentication (NextAuth)
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET="your-nextauth-secret-here"
# NEXTAUTH_URL is optional on Vercel (auto-detected). Set for local development or custom domains.
NEXTAUTH_URL="http://localhost:3000"

# Email (Resend)
# Get your API key from: https://resend.com/api-keys
RESEND_API_KEY="re_your_api_key_here"

# Google OAuth (for YouTube watch history access)
# Get these from Google Cloud Console: https://console.cloud.google.com/
# 1. Create a project and enable YouTube Data API v3
# 2. Create OAuth 2.0 credentials
# 3. Add authorized redirect URI: http://localhost:3000/api/auth/callback/google
GOOGLE_CLIENT_ID="your-google-client-id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Background Jobs Security
# Generate with: openssl rand -base64 32
CRON_SECRET="your-cron-secret-here"

# Logging
LOG_LEVEL="info"

# Feature Flags (Optional)
ENABLE_USAGE_TRACKING="false"
ENABLE_PALETTE_CLEANSER="false"
